#include <iostream>
#include <map>

class Cantor {
public:
    Cantor() = default;
    virtual ~Cantor() = default;

    virtual double Rate(const std::string& abbreviation) const = 0;
};

class Currency {
public:
    Currency() = default;
    virtual ~Currency() = default;

    virtual double ConvertedToDollars(const Cantor& cantor) const = 0;
    virtual std::string Abbreviation() const = 0;
    virtual double Amount() const = 0;
};

class EuroCurrency : public Currency {
public:
    EuroCurrency(const std::string& abbreviation, double amount)
        : abbreviation_(abbreviation), amount_(amount) {}

    double ConvertedToDollars(const Cantor& cantor) const {
        return amount_ / cantor.Rate(abbreviation_);
    }

    std::string Abbreviation() const {
        return abbreviation_;
    }

    double Amount() const {
        return amount_;
    }

private:
    std::string abbreviation_;
    double amount_;
};

class FakeUsdCantor : public Cantor {
public:
    FakeUsdCantor() {

        rates_ = {
          {"EUR", 0.85},
          {"JPY", 110.66},
          {"GBP", 0.73},
          {"CHF", 0.91},
          {"CAD", 1.25},
          {"AUD", 1.34},
          {"CNY", 6.47},
          {"HKD", 7.78},
          {"NZD", 1.44},
          {"KRW", 1153.89}
        };
    }

    double Rate(const std::string& abbreviation) const override {
        auto it = rates_.find(abbreviation);
        if (it != rates_.end()) {
            return it->second;
        }

        return 0.0;
    }

private:
    std::map<std::string, double> rates_;
};

int main() {
    EuroCurrency euro("EUR", 5000);

    FakeUsdCantor cantor;

    std::cout << "Abbreviation: " << euro.Abbreviation() << std::endl;
    std::cout << "Amount in EUR: " << euro.Amount() << std::endl;
    std::cout << "Amount in USD: " << euro.ConvertedToDollars(cantor) << std::endl;

    return 0;
}
